
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/QuanLyPhim_Layout.cshtml";
}

@section css{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

}

<style>
    .gird-login {
        padding: 80px;
        border-radius: 10px;
        width: 870px;
        height: 539px;
        margin: auto;
        margin-top: 150px;
    }

    .girdlogin1 {
        margin-top: -68px;
        padding: 80px;
        grid-column: 2;
        width: 496px;
        background-color: #F5F5F5;
        border: none;
        border-radius: 10px 10px 10px 10px;
        margin-bottom: 141px;
    }

    }

    .fontLogo {
        font-size: 36px;
        font-weight: 700;
        line-height: 44px;
        letter-spacing: -0.065em;
        text-align: left;
        color: #ff0000;
    }

    .pLogin {
        margin-top: 12px;
        font-weight: bold;
        font-size: 15px;
        line-height: 16px;
        color: #5C5C5C;
        /* padding-top: 4px;
    margin-left: 31px; */
        line-height: 31px;
    }

    .plogo {
        font-style: normal;
        font-weight: 300;
        font-size: 24px;
        line-height: 28px;
        letter-spacing: 0.015em;
        color: #5C5C5C;
        margin-bottom: 23px;
    }

    .forgot {
        margin-right: 123px;
        color: #52ACFF;
        font-size: 12px;
        line-height: 14px;
    }

    .Staylogged {
        color: #9D9A9A;
        font-size: 12px;
        line-height: 14px;
    }

    .btn-Login {
        background-color: #000000;
        width: 260px;
        height: 39px;
        border-radius: 5px;
        border: none;
        margin-top: 30px;
        color: #ff0000;
        cursor: pointer;
    }

    .form-control {
        color: #5C5C5C;
        line-height: 14px;
        /*margin-left: 32px;*/
        line-height: 24px;
        width: 249px;
        border-radius: 5px;
    }
</style>
@ViewBag.ThongBao
@using (Html.BeginForm("Login", "QuanLyPhim"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="id01" class="modal" style="padding:0px">
        <div class="grid-login">

            <div class="girdlogin1">
                <form class="formlogin">
                    <button class="exit" onclick="document.getElementById('id01').style.display='none'"><span style="padding:5px;">X</span></button>
                    <div class="fontLogo">Quản Lý Phim</div>
                    <div class="plogo">Đăng nhập vào tài khoản của bạn</div>
                    <div style="" class="pLogin">User Name</div>
                    @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "Enter your user name" })
                    @ViewData["Loi"]
                    @ViewData["Loi12"]
                    <div class="pLogin">Password</div>
                    @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter your password" })
                    @ViewData["Loi1"]
                    @ViewData["Loi2"]

                    <button class="btn-Login" style="" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>

}
